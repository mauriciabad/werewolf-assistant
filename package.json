{
  "name": "werewolf-card-dealer",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 5050",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress open'",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress run'",
    "test:unit": "cypress open-ct",
    "test:unit:ci": "cypress run-ct --quiet --reporter spec",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore  && stylelint \"**/*.{vue,css,scss,sass}\" --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/vue": "^1.0.6",
    "@vueuse/core": "^9.6.0",
    "pinia": "^2.0.11",
    "qrcode.vue": "^3.3.3",
    "vue": "^3.2.31",
    "vue-final-modal": "3.4.3",
    "vue-i18n": "^9.2.0-beta.35",
    "vue-router": "^4.0.13",
    "vue3-popper": "^1.4.2"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^2.2.2",
    "@cypress/vue": "^3.1.1",
    "@intlify/eslint-plugin-vue-i18n": "^1.4.1",
    "@intlify/vite-plugin-vue-i18n": "^4.0.0",
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/node": "^16.11.25",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/tsconfig": "^0.1.3",
    "cypress": "^9.5.0",
    "eslint": "^8.13.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "real-vh": "^1.0.0",
    "sass": "^1.49.9",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.6.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "~4.5.5",
    "vite": "^2.8.4",
    "vue-tsc": "^0.31.4"
  }
}
